<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:state_pressed="true">
        <color android:color="@color/custom_calendar_date_pressed_background" />
    </item>

    <item app:calendar_state_selected="true">
        <color android:color="@color/custom_calendar_date_selected_background" />
    </item>

    <item app:calendar_state_today="true">
        <color android:color="@color/custom_calendar_date_today_background" />
    </item>

    <item app:calendar_state_disabled="true">
        <color android:color="@color/custom_calendar_date_disabled_background" />
    </item>

    <item android:state_selected="true">
        <color android:color="@color/custom_calendar_date_selected_background" />
    </item>

    <item app:calendar_state_weekend="true">
        <color android:color="@color/custom_calendar_date_weekend_background" />
    </item>

    <item>
        <color android:color="@color/custom_calendar_date_background" />
    </item>

</selector>